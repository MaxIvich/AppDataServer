<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox  xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.appdataserver.HelloController">

    <MenuBar>
        <Menu text=" Файл">
            <MenuItem text="Выйти из программы" />
            </Menu>
    </MenuBar>

    <HBox>
        <ComboBox />
        <TextField editable="false" HBox.hgrow="ALWAYS" />
        <Button text="Вверх" />
    </HBox>
    <TableView fx:id="listServer"  VBox.vgrow="ALWAYS" />


    <HBox  spacing="5">
        <Button maxWidth="Infinity" text="На сервер" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity"  text="C Сервера" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Удалить" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" onAction="#quitApp" text="Выход" HBox.hgrow="ALWAYS" />
        <padding>
            <Insets bottom="5" left="5" right="5" top="5" />
        </padding>
    </HBox>

</VBox>
